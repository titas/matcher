<div class="col-lg-3"></div>
<div class="col-lg-6">
  <%= form_for(@profile) do |f| %>
    <div class="row">
      <div class="col-lg-1"></div>
      <div class="col-lg-10">
        <% if @profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
            <% @profile.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="col-lg-1"></div>
    </div>

    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">

        <div class="field">
          <%= f.text_field :name, placeholder: "Enter your name", class: "form-control" %>
        </div>
        <div class="field">
          <%= f.number_field :number, placeholder: "Enter a number", class: "form-control" %>
        </div>
        <div class="field">
          <label>Male:
            <%= f.radio_button :sex, Profile::MALE %>
          </label>
          <label>Female:
          <%= f.radio_button :sex, Profile::FEMALE %>
          </label>
        </div>
        <div class="actions">
          <%= f.button("Create Profile!", { class: "btn btn-theme" }) %>
        </div>
      </div>
      <div class="col-lg-3"></div>
    </div>
  <% end %>
</div>
<div class="col-lg-3"></div>

